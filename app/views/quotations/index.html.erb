
<div class="m-grid__item m-grid__item--fluid m-wrapper">

  <!-- BEGIN: Subheader -->
  <div class="m-subheader ">
    <div class="d-flex align-items-center">
      <div class="mr-auto">
        <h3 class="m-subheader__title ">Quotations</h3>
      </div>
    </div>
  </div>

  <!-- END: Subheader -->
  <div class="m-content">

    <!--Begin::Section-->
    <div class="row">
      <div class="col-xl-12">

        <!--begin:: Widgets/Top Products-->
        <div class="m-portlet m-portlet--mobile m-portlet--full-height ">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                  Quotations List
                </h3>
              </div>
            </div>
            <div class="m-portlet__head-tools">
              <div class="m-form__group">
                <a href="<%= spareparts_path  %>" class="btn btn-primary">
                  <i class="flaticon-add-circular-button"></i>
                  <span>Order Sparepart</span>
                </a>
              </div>
            </div>
          </div>
          <div class="m-portlet__body">
            <div class="m-section">
              <div class="m-section__content">
                <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                  <div class="row" style="margin-bottom: 20px">
                    <div class="col-sm-12 col-md-6">
                    </div>
                  </div>
                  <div class="table-responsive">
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
                      <thead>
                        <tr class="text-center">
                          <th>Date</th>
                          <th>Spareparts</th>
                          <th>Labours </th>
                          <th>Discount (%)</th>
                          <th>Total Order</th>
                        </tr>
                      </thead>
                      <tbody>

                        <% @quotations.each do |p|%>
                        <tr class='clickable-row' data-href='#'>
                           <td><%= p.created_at.strftime("%a, %m-%Y %H:%M") %></td>
				          	<td><%= p.list_spareparts %></td>
				          	<td><%= p.list_labours %></td>
				          	<td><%= p.discount %></td>
				          	<td>$<%= p.total_price rescue '-'%></td>
                          <td>
                            <a href="<%= quotation_views_path(p.id) %>" class="btn btn-success m-btn m-btn--icon" title="Edit" style="margin-bottom: 5px;">
                              <span>
                                <i class="la la-edit"></i>
                                <span>Detail</span>
                              </span>
                            </a>
                          </td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!--end:: Widgets/Top Products-->
      </div>
    </div>

    <!--End::Section-->

  </div>
</div>
