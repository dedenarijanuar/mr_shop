
<div class="m-grid__item m-grid__item--fluid m-wrapper">

  <!-- BEGIN: Subheader -->
  <div class="m-subheader ">
    <div class="d-flex align-items-center">
      <div class="mr-auto">
        <h3 class="m-subheader__title ">Quotation Detail</h3>
      </div>
      <div>
        <a href="<%= quotation_views_path(@quotation.id, format: :pdf ) %>" class="btn btn-success" style="display: inline-block;">
          <i class="la la-save"></i>
          <span>Export to PDF</span>
        </a>
      </div>
    </div>
  </div>

  <!-- END: Subheader -->
  <div class="m-content">

    <!--Begin::Section-->
    <div class="row">
      <div class="col-xl-6">

        <!--begin:: Widgets/Top Products-->
        <div class="m-portlet m-portlet--mobile m-portlet--full-height ">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                  Spare Part Detail
                </h3>
              </div>
            </div>
          </div>
          <div class="m-portlet__body">
            <div class="m-section">
              <div class="m-section__content">
                <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                  <div class="table-responsive">
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
                      <thead>
                        <tr class="text-center">
                          <th>Name</th>
                          <th>Price</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>

                        <% @spareparts.each do |p|%>
                        <tr class='clickable-row' data-href='#'>
                    <td><%= p.name rescue '-' %></td>
                    <td>$<%= p.price rescue '-' %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
        <!--end:: Widgets/Top Products-->
      </div>

      <div class="col-xl-6">

        <!--begin:: Widgets/Top Products-->
        <div class="m-portlet m-portlet--mobile m-portlet--full-height ">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">
                  Labours Detail
                </h3>
              </div>
            </div>
          </div>
          <div class="m-portlet__body">
            <div class="m-section">
              <div class="m-section__content">
                <div id="m_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                  <div class="table-responsive">
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="m_table_1">
                      <thead>
                        <tr class="text-center">
                          <th>Name</th>
                          <th>Price</th>
                          <th></th>
                        </tr>
                      </thead>
                      <tbody>

                        <% @labours.each do |p|%>
                        <tr class='clickable-row' data-href='#'>
                    <td><%= p.name rescue '-' %></td>
                    <td>$<%= p.price rescue '-' %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!--end:: Widgets/Top Products-->
      </div>

      <div class="col-xl-12">
          <div class="m-portlet m-portlet--tabs m-portlet--full-height product-portlet">
            <div class="m-portlet__head">
              <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                  <h5>
                    Detail Order
                  </h5>
                </div>
              </div>
            </div>
            <div class="m-portlet__body">
              <div class="row" style="margin-bottom:30px;">
                <div class="col-xl-4">
                  <div class="order-info">
                    <div class="fblock clearfix">
                      <div class="label">Order Date</div>
                      <div class="text"><%= @quotation.created_at.strftime("%a, %m-%Y %H:%M") %></div>
                    </div>
                    <div class="fblock clearfix">
                      <div class="label">Spareparts Order</div>
                      <div class="text">$<%= @spareparts.pluck(:price).sum %></div>
                    </div>
                    <div class="fblock clearfix">
                      <div class="label">Labours Order</div>
                      <div class="text">$<%= @labours.pluck(:price).sum %></div>
                    </div>
                    <div class="fblock clearfix">
                      <div class="label">Discount (%)</div>
                      <div class="text"><%= @quotation.discount.to_i rescue 0 %></div>
                    </div>
                    <div class="fblock clearfix">
                      <div class="label">Total Order</div>
                      <div class="text">$<%= @quotation.total_price %></div>
                    </div>

                  </div>
                </div>

              </div>
            </div>
          </div>
      </div>
    </div>

    <!--End::Section-->

  </div>
</div>
